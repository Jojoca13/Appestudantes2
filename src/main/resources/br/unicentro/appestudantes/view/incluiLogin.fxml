<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.unicentro.appestudantes.controller.IncluiLoginController"
            prefWidth="900.0" prefHeight="520.0"
            style="-fx-background-image: url('/image/LOGIN.IMG.jpg'); -fx-background-size: cover; -fx-background-position: center;">

    <center>
        <StackPane BorderPane.alignment="CENTER">
            <children>
                <!-- Painel semi-transparente com os campos (adaptado dos fx:id e nomes do seu FXML de referência) -->
                <VBox fx:id="loginBox"
                      spacing="12"
                      alignment="CENTER"
                      padding="20"
                      maxWidth="380"
                      style="-fx-background-color: rgba(255,255,255,0.85); -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 8,0,0,2);">

                    <children>
                        <!-- título usando o id do seu arquivo de referência -->
                        <Label fx:id="lblNomeTela" alignment="CENTER" text="Faça seu Login:">
                            <font>
                                <Font size="30.0"/>
                            </font>
                        </Label>

                        <!-- label auxiliar (preservado do seu FXML de referência) -->
                        <Label fx:id="lblNomeUsuario" />

                        <!-- rótulo "Nome" com padding como no seu FXML -->
                        <Label text="Nome">
                            <font>
                                <Font size="15.0"/>
                            </font>
                            <padding>
                                <Insets bottom="10.0"/>
                            </padding>
                        </Label>

                        <!-- campo de texto com o mesmo fx:id do seu FXML de referência -->
                        <TextField fx:id="txtNomEst" promptText="Digite seu nome" prefHeight="25.0" prefWidth="300.0"/>

                        <!-- HBox dos botões; mantém o botão Confirmar com o mesmo fx:id e onAction do seu controller -->
                        <HBox prefHeight="58.0" spacing="10.0" alignment="CENTER">
                            <children>
                                <Button fx:id="btnConf"
                                        text="Confirmar"
                                        onAction="#btnConfOnAction"
                                        prefHeight="37.0"
                                        prefWidth="110.0">
                                    <padding>
                                        <Insets bottom="10.0" right="10.0" top="10.0"/>
                                    </padding>
                                </Button>
                            </children>
                            <padding>
                                <Insets bottom="10.0" top="10.0"/>
                            </padding>
                        </HBox>
                    </children>

                    <!-- padding do VBox (mantido similar ao seu FXML original) -->
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="10.0"/>
                    </padding>
                </VBox>
            </children>
        </StackPane>
    </center>

</BorderPane>
